<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="bulma.min.css" />
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
  </head>
  <body>
    <section class="section">
      <div class="maincolumns columns is-desktop is-vcentered">
        <div class="column is-10 is-offset-1 notification is-info is-light box container">
          <div class="title">Books for <%= authorName[0].first_name %> <%= authorName[0].last_name %></div>
          <% if (allBooks) { %>
          <div class="table-container">
            <table class="table is-bordered is-hoverable is-striped is-narrow">
              <thead>
                <tr>
                  <!-- <th> # </th> -->
                  <th>Title</th>
                  <th>Description</th>
                  <th>ISBN</th>
                  <th>&nbsp;</th>
                </tr>
              </thead>
              <% let i=0; %> <% for(i=0; i < allBooks.length; i++) { %>
              <tr>
                <td><%= allBooks[i].title %></td>
                <td><%= allBooks[i].description %></td>
                <td><%= allBooks[i].ISBN %></td>
                <td>
                  <a href="/deleteBook?id=<%= allBooks[i].book_id %>">
                    <span class="icon is-small">
                      <i class="fas fa-trash"></i> </span
                  ></a>
                </td>
              </tr>
              <% } %>
              <tfoot>
                <tr>
                  <td colspan="4">There are <%= i %> books.</td>
                </tr>
              </tfoot>
            </table>
          </div>
          <% } %>
          <form action="/addBook?id=<%= allBooks[0].author_id %>" method="post">
            <div class="field is-horizontal">
              <div class="field-label is-normal">
                <label class="label">Add New Book</label>
              </div>
              <div class="field-body">
                <div class="field">
                  <p class="control is-expanded">
                    <input name="title" class="input" type="text" placeholder="Book Title" />
                  </p>
                </div>
                <div class="field">
                  <p class="control is-expanded">
                    <input name="description" class="input" type="text" placeholder="Description" />
                  </p>
                </div>
                <div class="field">
                  <p class="control is-expanded">
                    <input name="ISBN" class="input" type="text" placeholder="ISBN (ex: 978-3-16-148410-0)" />
                  </p>
                </div>
                <div class="field">
                  <button class="button is-link">
                    <span>Add</span>
                    <span class="icon is-small">
                      <i class="fas fa-user-plus"></i>
                    </span>
                  </button>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </section>
  </body>
</html>
